{
    "name": "dplug",
    "description": "A library for crafting native audio plugins as simply as possible.",
    "homepage": "http://github.com/AuburnSounds/dplug/",
    "copyright": "Steinberg",
    "license": "VST",

    "targetType": "none",

    "authors": [
        "Guillaume Piolat (original author)",
        "Richard Andrew Cattermole (X11 windowing)",
        "Ethan Reker (compile-time JSON parsing, X11 fixes, Wiki, clipit)",
        "Andrej Mitrovic"
    ],

    "dependencies":
    {
        "dplug:core": "*",
        "dplug:dsp": "*",
        "dplug:client": "*",
        "dplug:graphics": "*",
        "dplug:canvas": "*",
        "dplug:host": "*",
        "dplug:lv2": "*",
        "dplug:vst": "*",
        "dplug:vst3": "*",
        "dplug:au": "*",
        "dplug:window": "*",
        "dplug:gui": "*",
        "dplug:pbr-widgets": "*",
        "dplug:flat-widgets": "*",
        "dplug:cocoa": "*",
        "dplug:carbon": "*",
        "dplug:x11": "*"
    },

    "subPackages": [
        {
            "name": "core",
            "sourcePaths": 
            [ 
                "core/dplug/core" 
            ],

            "importPaths": [ "core" ],
            "authors": [
                "Guillaume Piolat",
                "Mike Parker (derelict-util bits)"
            ],

            "buildTypes": 
            {
                "unittest-release": 
                {
                    "buildOptions": ["unittests", "optimize", "inline"]
                }
            }
        },
        {
            "name": "dsp",

            "sourcePaths": 
            [ 
                "dsp/dplug/dsp" 
            ],

            "importPaths": [ "dsp" ],
            "dependencies": {
                "dplug:core": "*",
                "pfft": "~>1.0",
                "intel-intrinsics": "~>1.0"
            },

            "buildTypes": 
            {
                "unittest-release": 
                {
                    "buildOptions": ["unittests", "optimize", "inline"]
                }
            }
        },
        {
            "name": "client",
            "sourcePaths": [ "client/dplug/client" ],
            "importPaths": [ "client" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "graphics",
            "sourcePaths": [ "graphics/dplug/graphics" ],
            "importPaths": [ "graphics" ],
            "dependencies": {
                "dplug:core": "*",
                "gfm:math": "~>8.0",
                "intel-intrinsics": "~>1.0"
            }
        },
        {
            "name": "canvas",
            "sourcePaths": [ "canvas/dplug/canvas" ],
            "importPaths": [ "canvas" ],
            "dependencies": {
            	"dplug:core": "*",
                "dplug:graphics": "*",
                "gfm:math": "~>8.0",
                "intel-intrinsics": "~>1.0"
            }
        },
        {
            "name": "host",
            "sourcePaths": [ "host/dplug/host" ],
            "importPaths": [ "host" ],
            "dependencies": {
                "dplug:core": "*",
                "dplug:vst": "*",
                "dplug:window": "*"
            }
        },
        {
            "name": "lv2",
            "sourcePaths": [ "lv2/dplug/lv2" ],
            "importPaths": [ "lv2" ],
            "dependencies": {
                "dplug:client": "*"
            }
        },
        {
            "name": "vst",
            "sourcePaths": [ "vst/dplug/vst" ],
            "importPaths": [ "vst" ],
            "stringImportPaths": [ "$VST2_SDK/pluginterfaces/vst2.x" ],
            "dependencies": {
                "dplug:client": "*"
            }
        },
        {
            "name": "vst3",
            "sourcePaths": [ "vst3/dplug/vst3" ],
            "importPaths": [ "vst3" ],
            "dependencies": {
                "dplug:client": "*"
            }
        },
        {
            "name": "au",
            "sourcePaths": [ "au/dplug/au" ],
            "importPaths": [ "au" ],
            "dependencies": {
                "dplug:client": "*"
            },

            "dependencies-osx": {
                "dplug:carbon": "*",
                "dplug:cocoa": "*"
            }
        },
        {
            "name": "window",
            "sourcePaths": [ "window/dplug/window" ],
            "importPaths": [ "window" ],

            "libs-windows": ["gdi32", "user32"],

            "dependencies": {
                "gfm:math": "~>8.0",
                "dplug:graphics": "*",
                "dplug:core": "*"
            },

            "dependencies-osx": {
                "dplug:cocoa": "*",
                "dplug:carbon": "*"
            },

            "dependencies-linux": {
                "dplug:x11": "*"
            }
        },
        {
            "name": "gui",
            "sourcePaths": [ "gui/dplug/gui" ],
            "importPaths": [ "gui" ],

            "dependencies": {
                "gfm:math": "~>8.0",
                "dplug:client": "*",
                "dplug:window": "*",
                "dplug:core": "*",
                "dplug:graphics": "*",
                "intel-intrinsics": "~>1.0"
            }
        },
        {
            "name": "pbr-widgets",
            "sourcePaths": [ "pbrwidgets/dplug/pbrwidgets" ],
            "importPaths": [ "pbrwidgets" ],

            "dependencies": {
                "dplug:core": "*",
                "dplug:graphics": "*",
                "dplug:window": "*",
                "dplug:client": "*",
                "dplug:gui": "*"
            }
        },
        {
            "name": "flat-widgets",
            "sourcePaths": [ "flatwidgets/dplug/flatwidgets" ],
            "importPaths": [ "flatwidgets" ],

            "dependencies": {
                "dplug:core": "*",
                "dplug:graphics": "*",
                "dplug:window": "*",
                "dplug:client": "*",
                "dplug:gui": "*"
            }
        },
        {
            "name": "cocoa",
            "sourcePaths": [ "cocoa/derelict/cocoa" ],
            "importPaths": [ "cocoa" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "carbon",
            "sourcePaths": [ "carbon/derelict/carbon" ],
            "importPaths": [ "carbon" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "x11",
            "sourcePaths": [ "x11/derelict/x11" ],
            "importPaths": [ "x11" ],
            "libs-linux": ["X11"],
            "dependencies": {
                "dplug:core": "*"
            }
        }
    ]
}
