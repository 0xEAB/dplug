            "dependencies": {
                "gfm:core": "==1.1.6"
            }
        },
        {
            "name": "vst",
            "sourcePaths": [ "vst/dplug/vst" ],
            "importPaths": [ "vst" ],
            "dependencies": {
                "dplug:plugin": "*"
            }
        }
    ]
