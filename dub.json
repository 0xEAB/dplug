{
    "name": "dplug",
    "description": "A library for crafting native audio plugins as simply as possible.",
    "homepage": "http://github.com/p0nce/dplug/",
    "copyright": "Steinberg",
    "license": "VST",

    "targetType": "none",

    "authors": [
        "Guillaume Piolat",
        "Ethan Reker (compile-time JSON parsing)",
        "Andrej Mitrovic",
        "Sean M. Costello (Hilbert transformer)"
    ],

    "subPackages": [
        {
            "name": "core",
            "sourcePaths": [ "core/dplug/core" ],
            "importPaths": [ "core" ],
            "authors": [
                "Guillaume Piolat",
                "Mike Parker (derelict-util bits)"
            ]
        },
        {
            "name": "audio",
            "sourcePaths": [ "audio/dplug/audio" ],
            "importPaths": [ "audio" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "dsp",
            "sourcePaths": [ "dsp/dplug/dsp" ],
            "importPaths": [ "dsp" ],
            "dependencies": {
                "dplug:core": "*",
                "gfm:math": "~>6.0"
            }
        },
        {
            "name": "client",
            "sourcePaths": [ "client/dplug/client" ],
            "importPaths": [ "client" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "graphics",
            "sourcePaths": [ "graphics/dplug/graphics" ],
            "importPaths": [ "graphics" ],
            "dependencies": {
                "dplug:core": "*",
                "gfm:math": "~>6.0"
            }
        },
        {
            "name": "host",
            "sourcePaths": [ "host/dplug/host" ],
            "importPaths": [ "host" ],
            "dependencies": {
                "dplug:core": "*",
                "dplug:vst": "*",
                "dplug:window": "*"
            }
        },
        {
            "name": "vst",
            "sourcePaths": [ "vst/dplug/vst" ],
            "importPaths": [ "vst" ],
            "dependencies": {
                "dplug:client": "*"
            }
        },
        {
            "name": "au",
            "sourcePaths": [ "au/dplug/au" ],
            "importPaths": [ "au" ],
            "dependencies": {
                "dplug:client": "*"
            },

            "dependencies-osx": {
                "dplug:carbon": "*",
                "dplug:cocoa": "*"
            }
        },
        {
            "name": "window",
            "sourcePaths": [ "window/dplug/window" ],
            "importPaths": [ "window" ],

            "libs-windows": ["gdi32", "user32"],

            "dependencies": {
                "gfm:math": "~>6.0",
                "dplug:graphics": "*",
                "dplug:core": "*"
            },

            "dependencies-osx": {
                "dplug:cocoa": "*",
                "dplug:carbon": "*"
            }
        },
        {
            "name": "gui",
            "sourcePaths": [ "gui/dplug/gui" ],
            "importPaths": [ "gui" ],

            "dependencies": {
                "gfm:math": "~>6.0",
                "dplug:client": "*",
                "dplug:window": "*",
                "dplug:core": "*",
                "dplug:graphics": "*"
            }
        },
        {
            "name": "cocoa",
            "sourcePaths": [ "cocoa/derelict/cocoa" ],
            "importPaths": [ "cocoa" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "carbon",
            "sourcePaths": [ "carbon/derelict/carbon" ],
            "importPaths": [ "carbon" ],
            "dependencies": {
                "dplug:core": "*"
            }
        }
    ]
}
