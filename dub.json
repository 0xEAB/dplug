{
    "name": "dplug",
    "description": "A library for crafting native audio plugins as simply as possible.",
    "homepage": "http://github.com/AuburnSounds/dplug/",
    "copyright": "Steinberg",
    "license": "VST",

    "targetType": "none",

    "authors": [
        "Guillaume Piolat (original author)",
        "Richard Andrew Cattermole (X11 windowing)",
        "Ethan Reker (compile-time JSON parsing, X11 fixes, Wiki, clipit)",
        "Andrej Mitrovic",
        "Sean M. Costello (Hilbert transformer)"
    ],

    "dependencies":
    {
        "dplug:core": "*",
        "dplug:dsp": "*",
        "dplug:client": "*",
        "dplug:graphics": "*",
        "dplug:host": "*",
        "dplug:vst": "*",
        "dplug:au": "*",
        "dplug:window": "*",
        "dplug:gui": "*",
        "dplug:pbr-widgets": "*",
        "dplug:flat-widgets": "*",
        "dplug:cocoa": "*",
        "dplug:carbon": "*",
        "dplug:x11": "*"
    },

    "subPackages": [
        {
            "name": "core",
            "comment-sourcePaths": 
            [ 
                "core/dplug/core" 
            ],

            "sourceFiles" :
            [
                "core/dplug/core/package.d",
                "core/dplug/core/sharedlib.d",
                "core/dplug/core/traits.d",
                "core/dplug/core/vec.d",
                "core/dplug/core/math.d",
                "core/dplug/core/sync.d",
                "core/dplug/core/ringbuf.d",
                "core/dplug/core/lockedqueue.d",
                "core/dplug/core/fpcontrol.d",
                "core/dplug/core/runtime.d",
                "core/dplug/core/nogc.d",
                "core/dplug/core/random.d",
                "core/dplug/core/thread.d",
                "core/dplug/core/file.d",
                "core/dplug/core/cpuid.d",
                "core/dplug/core/complex.d",
                "core/dplug/core/map.d"
            ],

            "importPaths": [ "core" ],
            "authors": [
                "Guillaume Piolat",
                "Mike Parker (derelict-util bits)"
            ]
        },
        {
            "name": "dsp",
            "sourcePaths": [ "dsp/dplug/dsp" ],
            "importPaths": [ "dsp" ],
            "dependencies": {
                "dplug:core": "*",
                "pfft": "~>1.0",
                "intel-intrinsics": "~>1.0"
            }
        },
        {
            "name": "client",
            "sourcePaths": [ "client/dplug/client" ],
            "importPaths": [ "client" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "graphics",
            "sourcePaths": [ "graphics/dplug/graphics" ],
            "importPaths": [ "graphics" ],
            "dependencies": {
                "dplug:core": "*",
                "gfm:math": "~>6.0"
            }
        },
        {
            "name": "host",
            "sourcePaths": [ "host/dplug/host" ],
            "importPaths": [ "host" ],
            "dependencies": {
                "dplug:core": "*",
                "dplug:vst": "*",
                "dplug:window": "*"
            }
        },
        {
            "name": "vst",
            "sourcePaths": [ "vst/dplug/vst" ],
            "importPaths": [ "vst" ],
            "dependencies": {
                "dplug:client": "*"
            }
        },
        {
            "name": "au",
            "sourcePaths": [ "au/dplug/au" ],
            "importPaths": [ "au" ],
            "dependencies": {
                "dplug:client": "*"
            },

            "dependencies-osx": {
                "dplug:carbon": "*",
                "dplug:cocoa": "*"
            }
        },
        {
            "name": "window",
            "sourcePaths": [ "window/dplug/window" ],
            "importPaths": [ "window" ],

            "libs-windows": ["gdi32", "user32"],

            "dependencies": {
                "gfm:math": "~>6.0",
                "dplug:graphics": "*",
                "dplug:core": "*"
            },

            "dependencies-osx": {
                "dplug:cocoa": "*",
                "dplug:carbon": "*",
            },

            "dependencies-linux": {
                "dplug:x11": "*"
            }

                            
        },
        {
            "name": "gui",
            "sourcePaths": [ "gui/dplug/gui" ],
            "importPaths": [ "gui" ],

            "dependencies": {
                "gfm:math": "~>6.0",
                "dplug:client": "*",
                "dplug:window": "*",
                "dplug:core": "*",
                "dplug:graphics": "*"
            }
        },
        {
            "name": "pbr-widgets",
            "sourcePaths": [ "pbrwidgets/dplug/pbrwidgets" ],
            "importPaths": [ "pbrwidgets" ],

            "dependencies": {
                "dplug:core": "*",
                "dplug:graphics": "*",
                "dplug:window": "*",
                "dplug:client": "*",
                "dplug:gui": "*",
            }
        },
        {
            "name": "flat-widgets",
            "sourcePaths": [ "flatwidgets/dplug/flatwidgets" ],
            "importPaths": [ "flatwidgets" ],

            "dependencies": {
                "dplug:core": "*",
                "dplug:graphics": "*",
                "dplug:window": "*",
                "dplug:client": "*",
                "dplug:gui": "*",
            }
        },
        {
            "name": "cocoa",
            "sourcePaths": [ "cocoa/derelict/cocoa" ],
            "importPaths": [ "cocoa" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "carbon",
            "sourcePaths": [ "carbon/derelict/carbon" ],
            "importPaths": [ "carbon" ],
            "dependencies": {
                "dplug:core": "*"
            }
        },
        {
            "name": "x11",
            "sourcePaths": [ "x11/derelict/x11" ],
            "importPaths": [ "x11" ],
            "libs-linux": ["X11"],
            "dependencies": {
                "dplug:core": "*"
            }
        }
    ]
}
