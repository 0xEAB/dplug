{
    "name": "dplug",
    "description": "D audio toolkit. Easy way to make VST plugins.",
    "homepage": "http://github.com/p0nce/dplug/",
    "copyright": "Steinberg",
    "license": "VST",

    "targetType": "none",

    "authors": [
        "Guillaume Piolat",
        "Andrej Mitrovic",
        "Sean M. Costello (Hilbert transformer)"
    ],

    "dependencies": {
        "dplug:core": "*",
        "dplug:dsp": "*",
        "dplug:plugin": "*",
        "dplug:vst": "*",
        "dplug:gui": "*",
    },

    "subPackages": [
        {
            "name": "core",
            "sourcePaths": [ "core/dplug/core" ],
            "importPaths": [ "core" ],
            "dependencies": {
                "gfm:core": "~>2.3"
            }
        },
        {
            "name": "dsp",
            "sourcePaths": [ "dsp/dplug/dsp" ],
            "importPaths": [ "dsp" ],
            "dependencies": {
                "dplug:core": "*",
                "gfm:math": "~>2.3"
            }
        },
        {
            "name": "plugin",
            "sourcePaths": [ "plugin/dplug/plugin" ],
            "importPaths": [ "plugin" ],
            "dependencies": {
                "gfm:core": "~>2.3",
                "binrange": "~>1.0"
            }
        },
        {
            "name": "vst",
            "sourcePaths": [ "vst/dplug/vst" ],
            "importPaths": [ "vst" ],
            "dependencies": {
                "dplug:plugin": "*"
            }
        },
        {
            "name": "quarantine",
            "sourcePaths": [ "quarantine/dplug/quarantine" ],
            "importPaths": [ "quarantine" ],
            "dependencies": {
                "gfm:math": "~>2.3",
                "gfm:image": "~>2.3"
            },

            "buildRequirements": [
                "disallowOptimization"
            ]
        },
        {
            "name": "gui",
            "sourcePaths": [ "gui/dplug/gui" ],
            "importPaths": [ "gui" ],
            "sourcePaths-windows": [ "platforms/windows" ],
            "importPaths-windows": [ "platforms/windows" ],

            "libs-windows": ["gdi32", "user32"],
            "dependencies": {
                "dplug:plugin": "*",
                "dplug:core": "*",
                "dplug:quarantine": "*",
                "ae-graphics": "~>0.0",
                "gfm:math": "~>2.3",
                "gfm:image": "~>2.3"
            }
        }
    ]
}
